---
import Main from "@layouts/Main.astro";
import DuckGif from "@assets/uw-u-duck.gif";
---

<Main>
	<div
		class="w-screen h-screen flex flex-col gap-3 items-center justify-center p-4 bg-[#040104] text-white"
	>
		<img class="w-full max-w-36" src={DuckGif.src} alt="Duck gif" />
		<div class="text-2xl lg:text-4xl orbitron-regular">404</div>
		<div class="text-3xl lg:text-5xl orbitron-regular tracking-widest">NOT FOUND :(</div>
		<div class="max-w-prose">
			The resource you are looking for doesn't exists.
			<a
				class="text-white hover:text-pink-500 transition-colors duration-300"
				href="/">Try returning to home.</a
			>
		</div>
	</div>
</Main>
