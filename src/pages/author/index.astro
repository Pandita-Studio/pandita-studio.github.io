---
import { getCollection } from "astro:content";

import Main from "@layouts/Main.astro";
import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";
import AuthorCard from "@components/blog/AuthorCard.astro";

const authors = await getCollection("authors");
---

<Main title="Pandita | Authors">
	<Navbar />

	<div class="w-full min-h-screen mt-24 lg:mt-20">
		<div class="w-full flex items-center justify-center px-4">
			<div class="w-full p-6 max-w-4xl">
				<div class="w-full flex flex-col gap-6">
					<header class="max-w-prose">
						<nav aria-label="Breadcrumb" class="text-sm text-gray-600">
							<a class="hover:underline" href="/#home">Home</a>
							<span class="mx-2">/</span>
							<a class="hover:underline" href="/blog/1">Blog</a>
							<span class="mx-2">/</span>
							<span class="font-medium">Authors</span>
						</nav>

						<h1
							class="mt-5 mb-5 orbitron-regular tracking-widest text-3xl lg:text-4xl text-center lg:text-left"
						>
							AUTHORS
						</h1>

						<p class="text-gray-700 leading-relaxed text-lg">
							Meet the talented creators behind Pandita Studio. Discover their journeys, inspirations, and contributions to our games.
						</p>
					</header>

					<section
						class="w-full flex flex-col gap-6 mt-6"
					>
						{authors.map((author) => (
							<AuthorCard author={author.data} />
						))}
					</section>
				</div>
			</div>
		</div>
	</div>

	<Footer />
</Main>
