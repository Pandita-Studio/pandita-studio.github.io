---
import "@styles/global.css";
import { SEO } from "astro-seo";

const canonicalUrl = import.meta.env.PUBLIC_SITE_URL ?? Astro.props.canonicalUrl ?? null;

const title = Astro.props.title ?? "Pandita | Videogames Studio";
const description =
	Astro.props.description ??
	"Mexican indie game studio creating anime-inspired video games with unique storytelling, artistic style, and heartfelt passion.";
const type = Astro.props.type ?? "website";
const imagePath = Astro.props.image ?? "/pandita.png";
const image = /^(?:https?:|data:|\/\/)/i.test(imagePath)
	? imagePath
	: canonicalUrl
	? new URL(imagePath, canonicalUrl).toString()
	: imagePath;
const creator = Astro.props.creator ?? "@panditastudio";
---

<!doctype html>
<html lang="en" data-theme="light">
	<head>
		<SEO
			title={title}
			description={description}
			canonical={canonicalUrl}
			openGraph={{
				basic: {
					title: title,
					type: type,
					image: image,
				},
			}}
			twitter={{
				creator: creator,
			}}
			extend={{
				link: [{ rel: "icon", href: "/favicon.png" }],
				meta: [
					{
						name: "twitter:image",
						content:
							image,
					},
					{
						name: "twitter:title",
						content: title,
					},
					{ name: "twitter:description", content: "Agent" },
				],
			}}
		/>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-white dark:bg-[#040104]">
		<slot />
	</body>
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Orbitron&family=Press+Start+2P&display=swap");

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.orbitron-regular {
		font-family: "Orbitron", sans-serif;
		font-optical-sizing: auto;
		font-weight: 400;
		font-style: normal;
	}

	.orbitron-bold {
		font-family: "Orbitron", sans-serif;
		font-optical-sizing: auto;
		font-weight: 700;
		font-style: normal;
	}

	.press-start-2p-regular {
		font-family: "Press Start 2P", system-ui;
		font-weight: 400;
		font-style: normal;
	}

	.yt-iframe {
		aspect-ratio: 16 / 9;
		width: 100% !important;
	}
</style>
