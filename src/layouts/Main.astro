---
import "@styles/global.css";
import { SEO } from "astro-seo";

const isDev = import.meta.env.DEV;

const baseurl = isDev
	? Astro.url.origin
	: import.meta.env.SITE_URL || "https://panditastudio.com";
const canonical = new URL(Astro.url.pathname, baseurl).toString();

const title = Astro.props.title ?? "Pandita | Videogames Studio";
const description =
	Astro.props.description ??
	"Mexican indie game studio creating anime-inspired video games with unique storytelling, artistic style, and heartfelt passion.";
const type = Astro.props.type ?? "website";
const creator = Astro.props.creator ?? "@panditastudio";
const imagePath = Astro.props.image ?? "/pandita.png";
const image = new URL(imagePath, baseurl).toString();
---

<!doctype html>
<html lang="en" data-theme="light">
	<head>
		<SEO
			title={title}
			description={description}
			canonical={canonical}
			openGraph={{
				basic: {
					title: title,
					type: type,
					image: image,
					url: canonical,
				},
				optional: {
					description: description,
				},
			}}
			twitter={{
				creator: creator,
				title: title,
				description: description,
				image: image,
			}}
			extend={{
				link: [{ rel: "icon", href: "/favicon.png" }],
				meta: [
					{
						name: "twitter:image",
						content: image,
					},
					{
						name: "twitter:title",
						content: title,
					},
					{ name: "twitter:description", content: "Agent" },
				],
			}}
		/>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&family=Press+Start+2P&display=swap"
			rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />
	</head>
	<body class="bg-white dark:bg-[#040104]">
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.orbitron-regular {
		font-family: "Orbitron", sans-serif;
		font-optical-sizing: auto;
		font-weight: 400;
		font-style: normal;
	}

	.orbitron-bold {
		font-family: "Orbitron", sans-serif;
		font-optical-sizing: auto;
		font-weight: 700;
		font-style: normal;
	}

	.press-start-2p-regular {
		font-family: "Press Start 2P", system-ui;
		font-weight: 400;
		font-style: normal;
	}

	.yt-iframe {
		aspect-ratio: 16 / 9;
		width: 100% !important;
	}
</style>
