---
import BackgroundedDiv from "@components/atoms/BackgroundedDiv.astro";
import Background from "@assets/abstract_background_black.jpg";

import { ExternalLink } from "@lucide/astro";
---

<BackgroundedDiv
	backgroundSrc={Background.src}
	className="w-full min-h-screen bg-black text-white tracking-widest"
>
	<div class="p-4 pt-32">
		<div>&copy; Pandita Videogames Studio S.A.S. de C.V.</div>
		<div>
			<a href="mailto:contact@panditastudio.com" class="hover:underline"
				>contact@panditastudio.com</a>
		</div>
	</div>
	<div class="w-full md:flex flex-row p-4 pt-10 gap-5">
		<div>
			<div class="text-lg text-gray-300 mb-2 orbitron-regular">SITE</div>
			<div>
				<a
					href="/#home"
					class="hover:text-pink-500 transition-colors duration-300"
					>HOME</a
				>
			</div>
			<div>
				<a
					href="/#games"
					class="hover:text-pink-500 transition-colors duration-300"
					>GAMES</a
				>
			</div>
			<div>
				<a
					href="/#services"
					class="hover:text-pink-500 transition-colors duration-300"
					>SERVICES</a
				>
			</div>
			<div>
				<a
					href="/blog/1"
					class="hover:text-pink-500 transition-colors duration-300"
					>BLOG</a
				>
			</div>
		</div>
		<div>
			<div
				class="text-lg text-gray-300 mb-2 orbitron-regular mt-4 lg:mt-0"
			>
				STUDIO
			</div>
			<div>
				<a
					href="/contact"
					class="hover:text-pink-500 transition-colors duration-300"
					>CONTACT</a
				>
			</div>
			<div>
				<a
					href="/internships"
					class="hover:text-pink-500 transition-colors duration-300"
					>INTERNSHIPS</a
				>
			</div>
			<div>
				<a
					target="_blank"
					href="https://drive.google.com/drive/folders/12ZLZY_I6Pcn8meuCbhOvABx6yrFy65gI?usp=sharing"
					class="hover:text-pink-500 transition-colors duration-300 flex justify-start items-center gap-2"
					>PRESS <ExternalLink size={16} /></a
				>
			</div>
		</div>
		<div>
			<div
				class="text-lg text-gray-300 mb-2 orbitron-regular mt-4 lg:mt-0"
			>
				EXTERNAL
			</div>
			<div>
				<a
					target="_blank"
					href="https://discord.gg/BWCDPR7FqZ"
					class="hover:text-pink-500 transition-colors duration-300"
					>DISCORD</a
				>
			</div>
			<div>
				<a
					target="_blank"
					href="https://www.facebook.com/PanditaVideogames"
					class="hover:text-pink-500 transition-colors duration-300"
					>FACEBOOK</a
				>
			</div>
			<div>
				<a
					target="_blank"
					href="https://www.instagram.com/panditastudio"
					class="hover:text-pink-500 transition-colors duration-300"
					>INSTAGRAM</a
				>
			</div>
			<div>
				<a
					target="_blank"
					href="https://www.youtube.com/@panditastudio"
					class="hover:text-pink-500 transition-colors duration-300"
					>YOUTUBE</a
				>
			</div>
			<div>
				<a
					target="_blank"
					href="https://x.com/pandita_studio"
					class="hover:text-pink-500 transition-colors duration-300"
					>X</a
				>
			</div>
		</div>
	</div>
</BackgroundedDiv>
